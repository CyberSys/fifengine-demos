<Window title="Tabbed Area Example" min_size="200, 200" >
	<TabbedArea name="tabarea" min_size="200, 200" border_size="0" >
		<Tab content_name="label1">
			<Label text="Tab 1"/>
			<Button border_size="0" name="close1" text="X" />
		</Tab>
		<Label name="label1" text="The first Tab."/>

		<Tab content_name="label2">
			<Label text="Tab 2"/>
			<Button border_size="0" name="close2" text="X" />
		</Tab>
		<Label name="label2" text="The second Tab."/>

		<Tab content_name="label3">
			<Label text="Tab 3"/>
			<Button border_size="0" name="close3" text="X" />
		</Tab>
		<Label name="label3" text="The third Tab."/>

		<Tab content_name="label4">
			<Button border_size="0" name="create" text="+" />
		</Tab>
		<Label name="label4" text=""/>
	</TabbedArea>
	<Button name="closeButton" text="Close"/>
</Window>
