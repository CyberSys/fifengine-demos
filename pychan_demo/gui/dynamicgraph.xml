<Window title="Dynamic Graph Example" min_size="250, 250">
	<Label text="Move the points with left mouse button," />
	<Label text="add or remove them with right mouse button." />
	<Container name="graphContainer" min_size="250, 200" border_size="0">
		<LineGraph name="lineGraph" min_size="250, 200" size="250, 200" thickness="4" base_color="255,0,0" coordinates="10,10, 20,50, 30,10, 40,50, 50,100, 60,190, 150,10"/>
		<CurveGraph name="curveGraph" min_size="250, 200" size="250, 200" controll_points="False" thickness="4" base_color="0,0,255" coordinates="10,10, 20,50, 30,10, 40,50, 50,100, 60,190, 150,10"/>
		<PointGraph name="pointGraph" min_size="250, 200" size="250, 200" thickness="4" base_color="0,255,0" coordinates="10,10, 20,50, 30,10, 40,50, 50,100, 60,190, 150,10"/>
	</Container>
	<Button name="closeButton" text="Close"/>
</Window>
